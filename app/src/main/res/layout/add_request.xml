<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="16dp"
    android:background="@drawable/maintenance_bg">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/new_request_picture"
            android:layout_gravity="center_horizontal"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="fitStart"
            android:adjustViewBounds="true"
            android:contentDescription="Maintenance Image" />

        <EditText
            android:id="@+id/new_request_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Enter Request Title"
            android:layout_marginBottom="16dp"/>

        <Spinner
            android:id="@+id/new_request_urgency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/urgencyValues"
            android:spinnerMode="dialog"
            android:prompt="@string/spinner_prompt"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/new_request_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textMultiLine"
            android:hint="Enter the details of your request"/>

    </LinearLayout>
</ScrollView>