<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/complaint_bg"
    android:columnCount="2"
    android:orientation="vertical"
    android:padding="16dp"
    android:rowCount="8">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="0"
        android:gravity="center_horizontal|start"
        android:text="Complaint Date: "
        android:textSize="16sp" />

    <TextView
        android:id="@+id/manager_complaint_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="0"
        android:gravity="center_horizontal|start"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="1"
        android:gravity="center_horizontal|start"
        android:text="Complaint Title: "
        android:textSize="16sp" />

    <TextView
        android:id="@+id/manager_complaint_complainttitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="1"
        android:gravity="center_vertical|start"
        android:maxLines="2"
        android:textSize="16sp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="2"
        android:gravity="center_vertical|start"
        android:text="Tenant: "
        android:textSize="20sp" />

    <TextView
        android:id="@+id/manager_complaint_tenantname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="2"
        android:gravity="center_vertical|end"
        android:maxLines="2"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="3"
        android:gravity="center_horizontal|start"
        android:text="Address: "
        android:textSize="20sp" />

    <TextView
        android:id="@+id/manager_complaint_tenantaddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="3"
        android:gravity="center_horizontal|start"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="4"
        android:gravity="center_horizontal|start"
        android:text="Complaint: "
        android:textSize="20sp" />

    <TextView
        android:id="@+id/manager_complaint_complaintcontent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="4"
        android:gravity="center_vertical|start"
        android:textSize="20sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_row="5"/>

    <EditText
        android:id="@+id/manager_complaint_reply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_row="6"
        android:ems="10"
        android:inputType="textMultiLine"
        android:hint="Optional Reply Message"
        android:paddingBottom="20dp"/>

    <Button
        android:id="@+id/manager_complaint_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_row="7"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:text="Acknowledge Complaint"/>

</GridLayout>